{{#*inline "page" }}
<section>
  <div class="container">

  {{#if success }}
    <div class="box notification is-success">
      {{success}}
    </div>
  {{/if}}
    <div class="box notification is-danger">
      <p class="title">Admin</p>
      <p class="subtitle">Proceed with caution</p>
      <div class="content">
        <a href="{{links.create_edition}}">Make a new one</a>
      </div>
    </div>

    <div class="box">
      <div class="section">
        <h2 class="title">Choose an edition</h2>
      </div>

      <table class="table">
        <tbody>
          {{#each editions}}
          <tr>
            <td>
              <a href="/ethics/editions/{{slug}}">{{title}} ({{year}})</a>
            </td>
            <td>
              <a href="/ethics/editions/{{slug}}/edit">edit</a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </div>
    </div>
  </div>
</section>
{{/inline}}
{{> base}}
