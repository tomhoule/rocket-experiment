<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Ethica ordine geometrico demonstrata</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>
  <body>
    <div class="hero is-primary">
        <div class="container">
          <div class="hero-body">
            <a href="/">
              <h1 class="title">
                {{#if title}}{{title}}{{else}}Ethics{{/if}}
              </h1>
            </a>
            {{#if subtitle}}
            <h2 class="subtitle">
              {{subtitle}}
            </h2>
            {{/if}}
            {{#if author}}
            <h2 class="subtitle">{{author}}</h2>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
    <div class="section">
      <div class="container">
        {{>page}}
      </div>
    </div>
    <script src="/static/wholebundle.js"></script>
  </body>
</html>
