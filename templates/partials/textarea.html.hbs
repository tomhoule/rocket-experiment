<div class="field is-horizontal">
  <div class="field-label">
    <label class="label">
      {{# if label }}
      {{label}}
      {{else}}
      {{name}}
      {{/if}}
    </label>
  </div>
  <div class="field-body">
    <div class="field">
      <div class="control has-icons-right">
        <textarea
           class="input"
           name="{{name}}"
           placeholder="{{placeholder}}"
           type="text"
         >{{value}}</textarea>
      </div>
    </div>
  </div>
</div>
