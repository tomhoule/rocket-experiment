{{#*inline "savebutton"}}
<div class="field is-horizontal">
  <div class="field-label"></div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        <button class="button is-primary">Save</button>
      </div>
    </div>
  </div>
</div>
{{/inline}}

{{#*inline "textinput"}}
<div class="field is-horizontal">
  <div class="field-label">
    <label class="label">
      {{# if label }}
        {{label}}
      {{else}}
        {{name}}
      {{/if}}
    </label>
  </div>
  <div class="field-body">
    <div class="field">
      <div class="control has-icons-right">
        <input
           class="input"
           name="{{name}}"
           placeholder="{{placeholder}}"
           type="text"
           value="{{lookup edition name}}"
           />
      </div>
    </div>
  </div>
</div>
{{/inline}}

{{#*inline "page"}}
<section>
  <div class="container">
    <form class="box" action="/ethics/editions/new" method="post">
      {{> textinput name="title" label="Title"}}
      {{> textinput name="editor" label="Editor"}}
      {{> textinput name="slug" label="Slug"}}
      {{> savebutton }}
    </form>
  </div>
</section>
{{/inline}}

{{> base}}
